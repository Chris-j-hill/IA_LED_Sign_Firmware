 Hn = 7;    %target size
 Hm = 256;
 
 Psparse = zeros(Hm-Hn,Hn);
 num_1s_in_column = 3
 for i =1:Hm-Hn
    n = 0;
    while (n ~=3)
     coli = sprand(1,Hn ,num_1s_in_column/Hn);
     n = nnz(coli);
    end
    for j = 1:Hn
        if(coli(j)~=0)
            coli(j)=1;
        end
    end
    Psparse(i,:) = coli(:);
 end
 
 P = full(Psparse)
 Ik = eye(Hm-Hn)
 G = [P Ik]
 
 Pt = transpose(P);
 Ik_n = eye(Hn);
 H = [Ik_n Pt]
 
